<?xml version="1.0" encoding="utf-8"?>
<layout>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activity.MainActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <Button
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Basic Listing"
        app:layout_constraintBottom_toTopOf="@id/btnUserListing"
        android:id="@+id/btnBasicListing"/>
    <Button
        android:id="@+id/btnUserListing"
        app:layout_constraintTop_toBottomOf="@id/btnBasicListing"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="User Listing"
        app:layout_constraintBottom_toTopOf="@id/btnMultiSelect"/>


    <Button
        android:id="@+id/btnMultiSelect"
        app:layout_constraintTop_toBottomOf="@id/btnUserListing"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Multi Select Listing"
        app:layout_constraintBottom_toBottomOf="parent"/>

        <Button
            android:id="@+id/btnLoadingListing"
            app:layout_constraintTop_toBottomOf="@id/btnUserListing"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Loading Listing"
            app:layout_constraintBottom_toBottomOf="parent"/>


        <Button
            android:id="@+id/btnShimmerListing"
            app:layout_constraintTop_toBottomOf="@id/btnUserListing"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Shimmer Listing"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <Button
            android:id="@+id/btnPaginationListing"
            app:layout_constraintTop_toBottomOf="@id/btnUserListing"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pagination Listing"
            app:layout_constraintBottom_toBottomOf="parent"/>


        <Button
            android:id="@+id/btnBindingAdapter"
            app:layout_constraintTop_toBottomOf="@id/btnUserListing"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Binding Adapter Test"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <Button
            android:id="@+id/btnMultipleViews"
            app:layout_constraintTop_toBottomOf="@id/btnUserListing"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Multiple View Types Test"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </LinearLayout>
</ScrollView>
</layout>